<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/standard_padding">

    <ImageView
        android:id="@+id/hw8_crypto_logo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="@id/hw8_crypto_name"
        app:layout_constraintBottom_toBottomOf="@id/hw8_change_pay"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/hw8_crypto_trend"
        app:layout_constraintTop_toTopOf="@id/hw8_crypto_name"
        app:layout_constraintBottom_toBottomOf="@id/hw8_change_pay"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="100dp"
        android:layout_height="70dp"/>

    <TextView
        android:id="@+id/hw8_crypto_name"
        tools:text="Crypto Name"
        android:layout_marginStart="@dimen/standard_margin"
        android:layout_marginEnd="@dimen/standard_margin"
        android:textSize="@dimen/hw2_text_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/hw8_crypto_logo"
        app:layout_constraintEnd_toStartOf="@id/hw8_crypto_trend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/hw8_pay_usd"
        tools:text="Crypto"
        android:layout_marginTop="@dimen/standard_margin"
        app:layout_constraintStart_toStartOf="@id/hw8_crypto_name"
        app:layout_constraintTop_toBottomOf="@id/hw8_crypto_name"
        app:layout_constraintEnd_toEndOf="@id/hw8_crypto_name"
        android:text=""
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/hw8_change_pay"
        tools:text="Crypto"
        android:layout_marginTop="@dimen/standard_margin"
        app:layout_constraintStart_toStartOf="@id/hw8_pay_usd"
        app:layout_constraintTop_toBottomOf="@id/hw8_pay_usd"
        app:layout_constraintEnd_toEndOf="@id/hw8_crypto_name"
        android:text=""
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>