<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_crypto"
    app:startDestination="@id/showFavorites">

    <fragment
        android:id="@+id/showFragment"
        android:name="by.ocheretny.cyptorating.ui.ShowTopFragment"
        android:label="ShowFragment" >
        <action
            android:id="@+id/action_showFragment_to_tryBottomSheet"
            app:destination="@id/tryBottomSheet" />
    </fragment>

    <fragment
        android:id="@+id/showFavorites"
        android:name="by.ocheretny.cyptorating.ui.ShowFavoritesFragment"
        android:label="ShowFragment">
        <action
            android:id="@+id/action_show_selected_to_showFragment"
            app:destination="@id/showFragment" />
        <action
            android:id="@+id/action_show_selected_to_tryBottomSheet"
            app:destination="@id/tryBottomSheet" />
    </fragment>

    <fragment
        android:id="@+id/tryBottomSheet"
        android:name="by.ocheretny.cyptorating.ui.TryBottomSheet"
        android:label="TryBottomSheet">
        <argument
            android:name="SYMBOL"
            app:argType="string"
            android:defaultValue="BTC" />
    </fragment>
</navigation>